@using ContestMeter.Web.Site.Database.Entities
@model IEnumerable<NewsItem>
@{
    ViewBag.Title = "Домашняя страница";
}

@if (TempData["Message"] != null && TempData["Message"].ToString() != "")
{
    <br />
    <div class="col-md-12 alert alert-danger">@TempData["Message"]</div>
    <br />
}

<div class="row">
    <br/>
    <div class="col-md-12 alert alert-success">
        <h2>Новости</h2>
    </div>
</div>

@foreach (NewsItem item in Model)
{
    <div class="col-md-12 alert alert-info">
        <h3>@item.Title</h3>
        <p class="alert alert-warning">@item.Text</p>
        <p><b>Дата создания:</b> @item.CreatedDate.ToString()</p>
    </div>
    <hr/>
}

