@using ContestMeter.Web.Site.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Управление аккаунтом";
}

<h2>@ViewBag.Title.</h2>

@if (TempData["Message"] != null && TempData["Message"].ToString() != "")
{
    <br />
    <div class="col-md-12 alert alert-danger">@TempData["Message"]</div>
    <br />
}

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }

        <section id="externalLogins">
            @Html.Action("RemoveAccountList")
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
    <hr/>
    <div class="col-md-12">
        @Html.ActionLink("Удалить аккаунт", "RemoveAccount")
    </div>
        
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
